        <TextArea fx:id="T1" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <Pane prefHeight="56.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Button layoutX="66.0" layoutY="11.0" mnemonicParsing="false" onMouseClicked="#Bclick" text="连接数据库"/>
